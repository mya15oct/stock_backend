# ========================================
# Global Environment Variables (Template)
# ========================================
# Copy this file to `.env` and replace placeholder values.

# ----- Database Connectivity -----
DB_HOST=postgres
DB_PORT=5432
DB_NAME=Web_quan_li_danh_muc
DB_USER=postgres
DB_PASSWORD=your_db_password
DATABASE_URL=postgresql://postgres:your_db_password@postgres:5432/Web_quan_li_danh_muc

# ----- PostgreSQL Container Defaults -----
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=Web_quan_li_danh_muc
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_db_password

# ----- Redis -----
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379
CACHE_TTL=1800

# ----- External APIs -----
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
FINNHUB_API_KEY=your_finnhub_api_key

ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_API_BASE_URL=https://paper-api.alpaca.markets/v2
ALPACA_DATA_WS_URL=wss://stream.data.alpaca.markets/v2/iex

# ----- Kafka -----
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
SUBSCRIBED_SYMBOLS=AAPL,MSFT,GOOGL

# ----- Service Ports / URLs -----
FASTAPI_PORT=8000
EXPRESSJS_PORT=5000
PORT=5000
NODE_ENV=development
PYTHON_API_URL=http://fastapi-server:8000
PYTHON_API_TIMEOUT=10000
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
LOG_LEVEL=info

# Bắt buộc: Key để mã hóa Token đăng nhập
JWT_SECRET=super-long-key

# OAuth (Backend dùng để verify token chặt chẽ hơn nếu cần)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret