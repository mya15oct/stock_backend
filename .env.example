# Environment Variables for Stock Backend

# ==========================================
# PostgreSQL Database
# ==========================================
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=stock_password_change_in_production
POSTGRES_DB=stock_db
POSTGRES_PORT=5432

# ==========================================
# Redis Cache
# ==========================================
REDIS_PORT=6379
CACHE_TTL=1800

# ==========================================
# REST API Server (Python FastAPI)
# ==========================================
RESTAPI_PORT=8000

# Database connection for REST API
DATABASE_URL=postgresql://stock_user:stock_password_change_in_production@localhost:5432/stock_db

# Redis connection for REST API
REDIS_URL=redis://localhost:6379

# ==========================================
# Express.js Server (Node.js)
# ==========================================
EXPRESSJS_PORT=5000
NODE_ENV=development

# Python API URL (for Express to call FastAPI)
PYTHON_API_URL=http://localhost:8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# External APIs
# ==========================================
FINNHUB_API_KEY=your_finnhub_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=info

# ==========================================
# Security (Production)
# ==========================================
# JWT_SECRET=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here
