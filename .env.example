# ========================================
# Snow Analytics Stock - Backend Config
# ========================================
# Copy this file to .env and fill in your values
# ========================================

# Database Configuration (Docker)
# These values match docker-compose.yml defaults
DB_HOST=postgres
DB_PORT=5432
DB_NAME=Web_quan_li_danh_muc
DB_USER=postgres
DB_PASSWORD=123456  # CHANGE THIS IN PRODUCTION!

# Alternative: Full database URL (optional, overrides individual settings above)
# DATABASE_URL=postgresql://postgres:123456@localhost:5432/Web_quan_li_danh_muc

# Redis Configuration (optional but recommended)
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_TTL=1800  # Cache time-to-live in seconds (30 minutes)

# API Keys (required for data import)
# Get free keys from:
# - Alpha Vantage: https://www.alphavantage.co/support/#api-key
# - Finnhub: https://finnhub.io/register
ALPHA_VANTAGE_API_KEY=demo  # REQUIRED - Replace with your key
FINNHUB_API_KEY=demo        # REQUIRED - Replace with your key

# Server Ports
FASTAPI_PORT=8000
EXPRESSJS_PORT=5000

# PostgreSQL Admin (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456  # CHANGE THIS IN PRODUCTION!
POSTGRES_DB=Web_quan_li_danh_muc
POSTGRES_PORT=5432

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Node Environment
NODE_ENV=development

# Python API URL (for Express.js server)
PYTHON_API_URL=http://fastapi-server:8000
